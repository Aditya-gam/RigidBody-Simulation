<mujoco model="sphere_model">
  <!-- Set simulation options with explicit gravity in the -y direction -->
  <option timestep="0.01" gravity="0 0 -9.81" />

  <!-- World body definition -->
  <worldbody>
    <!-- Floor: A static, horizontal plane at y = 0 -->
    <geom name="floor" type="plane" pos="0 0 0" size="5 5 0.1" rgba="0.7 0.7 0.7 1"/>
    
    <!-- Sphere body initially placed above the floor -->
    <body name="ball" pos="0 0 10">
      <!-- Free joint with a name for reference -->
      <joint name="ball_free_joint" type="free"/>
      
      <!-- Sphere geometry -->
      <geom name="ball_geom" type="sphere" size="0.5" rgba="1 0 0 1" friction="0 0 0"
      solimp="0.9 0.95 1.0" solref="0.02 1"/>
      
      <!-- Inertial properties for a solid sphere -->
      <inertial pos="0 0 0" mass="1" diaginertia="0.1 0.1 0.1"/>
    </body>
  </worldbody>
</mujoco>
