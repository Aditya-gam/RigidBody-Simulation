<mujoco model="sphere_model">
  <!-- Set simulation options -->
  <option timestep="0.01" />
  
  <!-- Define the assets (if you need to include textures, meshes, etc.) -->
  <!-- For now, we use built-in sphere geometry -->

  <worldbody>
    <!-- Floor: A static plane positioned at y=0.
         The plane is rotated so its normal is [0, 1, 0].
         Here a rotation of -90Â° about the x-axis is applied via quat. -->
    <geom name="floor" type="plane" pos="0 0 0" size="5 5 0.1"
          rgba="0.8 0.8 0.8 1" quat="0.7071 -0.7071 0 0"/>
    
    <!-- Sphere body: Initially placed above the floor (y=1) -->
    <body name="ball" pos="0 1 0">
      <!-- Free joint for full spatial motion under gravity -->
      <joint type="free"/>
      
      <!-- Sphere geometry: type sphere, with an arbitrary size (radius=0.5) -->
      <!-- The sphere is rendered in red (rgba="1 0 0 1"). -->
      <!-- Friction is set to zero (all friction parameters 0). -->
      <geom name="ball_geom" type="sphere" size="0.5" rgba="1 0 0 1"
            friction="0 0 0"/>
      
      <!-- Inertial properties computed for a solid sphere:
           For mass = 1 and radius = 0.5, I = (2/5)*1*0.5^2 = 0.1 -->
      <inertial pos="0 0 0" mass="1" diaginertia="0.1 0.1 0.1"/>
    </body>
  </worldbody>
</mujoco>
