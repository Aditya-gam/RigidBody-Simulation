<mujoco>

  <compiler angle="radian" coordinate="local" inertiafromgeom="true"/>

  <default>
    <joint armature="0" damping="0.1" limited="false"/>
    <geom friction="0.0" solimp="0.99 0.99 0.8" solref="0.01 0.5"/>
  </default>

  <option gravity="0 0 -9.8" timestep="0.01"/>

  <asset>
    <texture name="texplane" type="2d" builtin="checker" rgb1=".5 .8 .9" rgb2=".6 .9 1" width="512" height="512"/>
    <material name="MatPlane" texture="texplane" texrepeat="10 10" texuniform="true"/>

    <texture name="ball_texture" type="cube" builtin="checker" rgb1="1 0 0" rgb2="0.8 0 0" width="300" height="300"/>
    <material name="MatBall" texture="ball_texture" texrepeat="8 8"/>
  </asset>

  <worldbody>

    <!-- Light sources -->
    <light diffuse=".5 .5 .5" dir="0 0 -1" pos="0 0 3"/>

    <!-- Ground -->
    <geom condim="3" material="MatPlane" name="ground" pos="0 0 0" size="5 5 0.1" type="plane" solref="0.001 0.5" /> 

    <!-- Multiple spheres -->
    <body name="ball1" pos="-1 -2 1">
      <joint name="ball_joint1" type="free" damping="0.001"/>
      <geom name="ball_geom1" size="0.1" type="sphere" material="MatBall" density="50" solref="0.001 0.5"/>
    </body>

    <body name="ball2" pos="1 2 1">
      <joint name="ball_joint2" type="free" damping="0.001"/>
      <geom name="ball_geom2" size="0.1" type="sphere" material="MatBall" density="50" solref="0.001 0.5"/>
    </body>

    <body name="ball3" pos="2 -1 1.2">
      <joint name="ball_joint3" type="free" damping="0.001"/>
      <geom name="ball_geom3" size="0.1" type="sphere" material="MatBall" density="50" solref="0.001 0.5"/>
    </body>

    <body name="ball4" pos="-2 1 1.5">
      <joint name="ball_joint4" type="free" damping="0.001"/>
      <geom name="ball_geom4" size="0.1" type="sphere" material="MatBall" density="50" solref="0.001 0.5"/>
    </body>

  </worldbody>

</mujoco>
